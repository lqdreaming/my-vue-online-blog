#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_chromedriver@2.33.2@chromedriver/bin/chromedriver" "$@"
  ret=$?
else 
  node  "$basedir/../_chromedriver@2.33.2@chromedriver/bin/chromedriver" "$@"
  ret=$?
fi
exit $ret
